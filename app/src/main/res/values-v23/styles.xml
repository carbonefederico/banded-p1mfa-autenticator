<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/colorBlackTransparentDark</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="headerBar">
        <item name="android:background">@color/colorAlpha</item>
        <item name="android:actionBarSize">80dp</item>
    </style>

    <style name="button">
        <item name="android:gravity">center</item>
        <item name="android:layout_marginEnd">25dp</item>
        <item name="android:layout_marginStart">25dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="roundable_button" parent="button">
        <item name="android:background">@drawable/roundable_button_white_enabled</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="textAppearanceNotificationStyle" parent="@android:style/TextAppearance">
        <item name="android:background">@color/slider_error_notification_background_color</item>
        <item name="android:padding">@dimen/error_area_padding</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/error_area_text_size</item>
        <item name="android:gravity">center</item>
    </style>

</resources>